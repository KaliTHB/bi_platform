// File: .env.example (root level)
# Disable Redis
REDIS_ENABLED=false
CACHE_ENABLED=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bi_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bi_platform
DB_USER=postgres
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PORT=4000
API_BASE_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
FRONTEND_PORT=3000

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Performance & Caching
CACHE_TTL_DEFAULT=300
CACHE_TTL_PLUGINS=3600
CACHE_TTL_WORKSPACE_CONFIGS=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PLUGIN_MAX=50

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Development
NODE_ENV=development
DEBUG=bi-platform:*